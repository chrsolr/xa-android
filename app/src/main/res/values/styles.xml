<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="AppTheme.Base" >
        <item name="android:colorBackground">@color/color_white</item>
        <item name="android:textColor">@color/primary_text_dark</item>
        <item name="android:textColorPrimary">@color/primary_text_dark</item>
        <item name="android:textColorSecondary">@color/primary_text_dark</item>
        <item name="android:windowBackground">@color/color_white</item>
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_primary_accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NavigationTheme" parent="AppTheme">
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:tint">@color/color_primary_accent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/color_primary_accent</item>
    </style>

    <style name="AppTheme.TextAppearance.Title" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/primary_text_dark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.TextAppearance.Subtitle" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/primary_text_light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.TextAppearance.Medium" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/primary_text_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.TextAppearance.Small" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/primary_text_dark</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.TextAppearance.Small.Light" parent="AppTheme.TextAppearance.Small">
        <item name="android:textColor">@color/primary_text_light</item>
    </style>

    <style name="AppTheme.TextAppearance.Toolbar.Title" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/color_primary_accent</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>