<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
	android:background="?attr/selectableItemBackground"
	android:padding="@dimen/padding_level_2"
    tools:context="io.keypunchers.xa.fragments.UpcomingGamesChildFragment">

    <TextView
        android:id="@+id/tv_upcoming_games_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/AppTheme.TextStyle.Title" />

    <TextView
        android:id="@+id/tv_upcoming_games_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
		app:layout_constraintTop_toBottomOf="@+id/tv_upcoming_games_title"
		app:layout_constraintLeft_toRightOf="@+id/tv_upcoming_games_title"
		app:layout_constraintStart_toStartOf="@+id/tv_upcoming_games_title"
        android:textAppearance="@style/AppTheme.TextStyle.Subtitle" />

</android.support.constraint.ConstraintLayout>
