<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
	android:background="?attr/selectableItemBackgroundBorderless"
    tools:context="io.keypunchers.xa.fragments.UpcomingGamesChildFragment">

    <TextView
        android:id="@+id/tv_upcoming_games_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_level_2"
        android:textAppearance="@style/AppTheme.TextStyle.Title" />

    <TextView
        android:id="@+id/tv_upcoming_games_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_level_2"
        android:textAppearance="@style/AppTheme.TextStyle.Subtitle" />

</LinearLayout>
