<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_level_1"
    android:layout_marginTop="@dimen/margin_level_1"
    android:orientation="vertical">

    <io.keypunchers.xa.views.ScaledImageView
        android:id="@+id/iv_achievement_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/color_black"
        android:minHeight="200dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_alignBottom="@+id/iv_achievement_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/primary_gradient_bottom"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_achievement_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingEnd="@dimen/padding_level_1"
        android:paddingLeft="@dimen/padding_level_1"
        android:paddingRight="@dimen/padding_level_1"
        android:paddingStart="@dimen/padding_level_1"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/tv_achievement_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textAppearance="@style/AppTheme.TextAppearance.Title"
            android:textColor="@color/color_white" />

        <TextView
            android:id="@+id/tv_achievement_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textAppearance="@style/AppTheme.TextAppearance.Subtitle"
            android:textColor="@color/color_light_gray"
            android:textStyle="italic" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_achievement_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/AppTheme.TextAppearance.Subtitle"
        android:textColor="@color/primary_text_light"
        android:textStyle="italic"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:paddingBottom="8dp"
        android:paddingEnd="@dimen/padding_level_1"
        android:paddingLeft="@dimen/padding_level_1"
        android:paddingRight="@dimen/padding_level_1"
        android:paddingStart="@dimen/padding_level_1"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />

</android.support.constraint.ConstraintLayout>
