<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_level_0"
    android:paddingLeft="@dimen/padding_level_0"
    android:paddingRight="@dimen/padding_level_1"
    android:paddingTop="@dimen/padding_level_1"
    tools:context="io.keypunchers.xa.fragments.CommentListFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/color_white"
        app:cardElevation="@dimen/recycler_view_evelation"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/padding_level_1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <io.keypunchers.xa.views.ScaledImageView
                android:id="@+id/iv_comment_list"
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:adjustViewBounds="true"
                android:background="@color/color_primary"
                android:visibility="visible"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_comment_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@style/AppTheme.TextAppearance.Title"
                android:textColor="@null"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_comment_list"
                android:layout_below="@+id/iv_comment_list"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/tv_comment_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@style/AppTheme.TextAppearance.Subtitle"
                android:textColor="@null"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_comment_title"
                android:layout_below="@+id/tv_comment_title"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/iv_comment_list"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/tv_comment_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_comment_date"
                android:layout_marginTop="@dimen/margin_level_1"
                android:autoLink="web"
                android:clickable="true"
                android:textAppearance="@style/AppTheme.TextAppearance.Small"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_comment_date" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>