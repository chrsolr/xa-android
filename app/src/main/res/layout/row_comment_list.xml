<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:padding="@dimen/padding_level_2"
    tools:context="io.keypunchers.xa.fragments.CommentListFragment">

    <io.keypunchers.xa.views.ScaledImageView
        android:id="@+id/iv_comment_list"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:background="@color/color_black" />

    <TextView
        android:id="@+id/tv_comment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/iv_comment_list"
        android:layout_marginTop="@dimen/margin_level_1"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="@style/AppTheme.TextStyle.Title" />

    <TextView
        android:id="@+id/tv_comment_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_comment_title"
        android:layout_toEndOf="@+id/iv_comment_list"
        android:layout_toRightOf="@+id/iv_comment_list"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="@style/AppTheme.TextStyle.Subtitle" />

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_comment_date"
        android:layout_marginBottom="@dimen/margin_level_1"
        android:layout_marginTop="@dimen/margin_level_1"
        android:background="@color/divider" />

    <TextView
        android:id="@+id/tv_comment_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view_divider"
        android:autoLink="web"
        android:clickable="true"
        android:lineSpacingExtra="3dp"
        android:textAppearance="@style/AppTheme.TextStyle.Normal" />
</RelativeLayout>