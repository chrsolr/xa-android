<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:paddingTop="@dimen/padding_level_1"
	android:paddingBottom="@dimen/padding_level_1">

    <ImageView
        android:id="@+id/iv_games_cover"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/color_black"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_games_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/margin_level_1"
        android:layout_marginStart="@dimen/margin_level_1"
        android:layout_toEndOf="@+id/iv_games_cover"
        android:layout_toRightOf="@+id/iv_games_cover"
        android:ellipsize="end"
        android:maxLines="2"
        android:textAppearance="@style/AppTheme.TextAppearance.Title"
        android:textColor="@null" />

    <TextView
        android:id="@+id/tv_games_ach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_games_title"
        android:layout_marginLeft="@dimen/margin_level_1"
        android:layout_marginStart="@dimen/margin_level_1"
        android:layout_toEndOf="@+id/iv_games_cover"
        android:layout_toRightOf="@+id/iv_games_cover"
        android:textAppearance="@style/AppTheme.TextAppearance.Small.Light"
        android:textColor="@null" />

    <TextView
        android:id="@+id/tv_games_gs_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_games_ach"
        android:layout_marginLeft="@dimen/margin_level_1"
        android:layout_marginStart="@dimen/margin_level_1"
        android:layout_toEndOf="@+id/iv_games_cover"
        android:layout_toRightOf="@+id/iv_games_cover"
        android:textAppearance="@style/AppTheme.TextAppearance.Small.Light"
        android:textColor="@null" />

