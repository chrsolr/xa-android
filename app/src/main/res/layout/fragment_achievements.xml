<android.support.v4.widget.NestedScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:fitsSystemWindows="true"
			android:background="@color/color_black"
			app:layout_collapseMode="parallax" >

			<io.keypunchers.xa.views.ScaledImageView
				android:id="@+id/iv_game_achievements_banner"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@color/color_black"/>

			<View
				android:id="@+id/view"
				android:layout_width="match_parent"
				android:layout_height="@dimen/img_gradient_height"
				android:layout_alignParentBottom="true"
				android:layout_alignParentLeft="true"
				android:layout_alignParentStart="true"
				android:background="@drawable/primary_gradient_bottom" />

			<ImageView
				android:id="@+id/iv_game_achievements_cover"
				android:layout_width="90dp"
				android:layout_height="120dp"
				android:layout_alignBottom="@+id/view"
				android:layout_alignParentLeft="true"
				android:layout_alignParentStart="true"
				android:layout_marginBottom="@dimen/margin_level_2"
				android:layout_marginLeft="@dimen/margin_level_2"
				android:layout_marginStart="@dimen/margin_level_2"
				tools:ignore="ContentDescription" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_toRightOf="@+id/iv_game_achievements_cover"
				android:layout_toEndOf="@+id/iv_game_achievements_cover"
				android:layout_alignBottom="@+id/view"
				android:layout_marginBottom="@dimen/margin_level_2"
				android:orientation="vertical">

				<TextView
					android:id="@+id/tv_game_ach_title"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/margin_level_1"
					android:layout_marginStart="@dimen/margin_level_1"
					android:fontFamily="sans-serif-bold"
					android:textAppearance="@style/AppTheme.TextAppearance.Title"
					android:textColor="@color/color_white"
					android:textStyle="bold" />

				<TextView
					android:id="@+id/tv_game_ach_genres"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/margin_level_1_italic"
					android:layout_marginStart="@dimen/margin_level_1_italic"
					android:textAppearance="@style/AppTheme.TextAppearance.Subtitle"
					android:textColor="@color/color_light_gray"
					android:textStyle="italic" />

				<TextView
					android:id="@+id/tv_game_ach_amount"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/margin_level_1_italic"
					android:layout_marginStart="@dimen/margin_level_1_italic"
					android:textAppearance="@style/AppTheme.TextAppearance.Subtitle"
					android:textColor="@color/color_light_gray"
					android:textStyle="italic" />
			</LinearLayout>

		</RelativeLayout>

        <android.support.v7.widget.RecyclerView
			android:id="@+id/rv_achievements"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:clipToPadding="false"
			android:fitsSystemWindows="true"
			android:paddingTop="@dimen/padding_level_1"
			android:paddingBottom="@dimen/padding_level_1"
			android:paddingLeft="@dimen/padding_level_2"
			android:paddingStart="@dimen/padding_level_2"
			android:paddingRight="@dimen/padding_level_2"
			android:paddingEnd="@dimen/padding_level_2"
			android:scrollbars="none"
			app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
