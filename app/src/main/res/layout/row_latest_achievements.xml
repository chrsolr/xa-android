<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_level_2">

    <ImageView
        android:id="@+id/iv_la_cover"
        android:layout_width="125dp"
        android:layout_height="125dp"
		android:scaleType="centerCrop"
		android:background="@color/color_black"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_la_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:ellipsize="end"
        android:maxLines="2"
        android:textAppearance="@style/AppTheme.TextAppearance.Title"
        android:textColor="@null"
        android:layout_alignLeft="@+id/tv_la_ach_count"
        android:layout_alignStart="@+id/tv_la_ach_count" />

    <TextView
        android:id="@+id/tv_la_ach_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_la_title"
        android:layout_marginLeft="@dimen/margin_level_1"
        android:layout_marginStart="@dimen/margin_level_1"
        android:layout_toEndOf="@+id/iv_la_cover"
        android:layout_toRightOf="@+id/iv_la_cover"
        android:textAppearance="@style/AppTheme.TextAppearance.Subtitle"
        android:textColor="@null" />

    <TextView
        android:id="@+id/tv_la_gs_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_la_ach_count"
        android:layout_marginLeft="@dimen/margin_level_1"
        android:layout_marginStart="@dimen/margin_level_1"
        android:layout_toEndOf="@+id/iv_la_cover"
        android:layout_toRightOf="@+id/iv_la_cover"
        android:textAppearance="@style/AppTheme.TextAppearance.Subtitle"
        android:textColor="@null" />

    <TextView
        android:id="@+id/tv_la_submitted_by"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_la_gs_count"
        android:layout_marginLeft="@dimen/margin_level_1"
        android:layout_marginStart="@dimen/margin_level_1"
        android:layout_toEndOf="@+id/iv_la_cover"
        android:layout_toRightOf="@+id/iv_la_cover"
        android:textAppearance="@style/AppTheme.TextAppearance.Subtitle"
        android:textColor="@null"
        android:textStyle="italic" />

</RelativeLayout>
