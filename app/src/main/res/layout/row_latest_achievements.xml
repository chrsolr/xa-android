<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/cardview_background"
    app:cardCornerRadius="@dimen/cardview_corner_radius"
    app:cardElevation="@dimen/cardview_elevation"
    app:cardUseCompatPadding="true"
    app:contentPadding="0dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:padding="@dimen/margin_level_2">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_la_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="false"
            app:contentPadding="0dp"
            tools:layout_editor_absoluteY="248dp"
            tools:layout_editor_absoluteX="16dp">

            <ImageView
                android:id="@+id/iv_la_cover"
                android:layout_width="@dimen/la_artwork_size"
                android:layout_height="@dimen/la_artwork_size"
                android:background="@color/color_white"
                android:scaleType="centerCrop"
                tools:ignore="ContentDescription" />

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tv_la_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            app:layout_constraintStart_toEndOf="@+id/cv_la_cover"
            app:layout_constraintTop_toTopOf="@+id/cv_la_cover"
            android:textAppearance="@style/AppTheme.TextStyle.Title"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/cv_la_cover"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="0dp"
            app:layout_constraintHorizontal_bias="0.0" />

        <TextView
            android:id="@+id/tv_la_ach_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/AppTheme.TextStyle.Subtitle"
            app:layout_constraintLeft_toLeftOf="@+id/tv_la_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_la_title"
            app:layout_constraintHorizontal_bias="0.0" />

        <TextView
            android:id="@+id/tv_la_gs_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/AppTheme.TextStyle.Subtitle"
            app:layout_constraintLeft_toLeftOf="@+id/tv_la_ach_count"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_la_ach_count" />

        <TextView
            android:id="@+id/tv_la_submitted_by"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/AppTheme.TextStyle.Subtitle"
            app:layout_constraintLeft_toLeftOf="@+id/tv_la_gs_count"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_la_gs_count" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
