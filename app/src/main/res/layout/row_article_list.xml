<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:orientation="vertical"
	android:background="?attr/selectableItemBackgroundBorderless"
    android:paddingBottom="@dimen/padding_level_1"
    android:paddingTop="@dimen/padding_level_1">

    <ImageView
        android:id="@+id/iv_news_image"
        android:layout_width="@dimen/news_artwork_size"
        android:layout_height="@dimen/news_artwork_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/color_black"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/margin_level_1"
        android:layout_marginStart="@dimen/margin_level_1"
        android:layout_toEndOf="@+id/iv_news_image"
        android:layout_toRightOf="@+id/iv_news_image"
        android:ellipsize="end"
        android:maxLines="2"
        android:textAppearance="@style/AppTheme.TextStyle.Title" />

    <TextView
        android:id="@+id/tv_news_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_news_title"
        android:layout_marginLeft="@dimen/margin_level_1"
        android:layout_marginStart="@dimen/margin_level_1"
        android:layout_toEndOf="@+id/iv_news_image"
        android:layout_toRightOf="@+id/iv_news_image"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="@style/AppTheme.TextStyle.Subtitle" />

</RelativeLayout>
