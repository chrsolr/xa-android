<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.keypunchers.xa.fragments.ArticleFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:padding="@dimen/padding_level_2"
        android:scrollbars="none">

            <LinearLayout
                android:id="@+id/ll_article"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_article_author_avatar"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="false"
                        android:layout_centerInParent="false"
                        android:layout_centerVertical="false" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="false"
                        android:layout_toEndOf="@+id/iv_article_author_avatar"
                        android:layout_toRightOf="@+id/iv_article_author_avatar">

                        <TextView
                            android:id="@+id/tv_article_author_firstname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="false"
                            android:layout_marginLeft="@dimen/margin_level_1"
                            android:fontFamily="sans-serif-light"
                            android:textAllCaps="true"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/tv_article_author_lastname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="false"
                            android:layout_toEndOf="@+id/tv_article_author_firstname"
                            android:layout_toRightOf="@+id/tv_article_author_firstname"
                            android:fontFamily="sans-serif-bold"
                            android:textAllCaps="true"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_article_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_article_author_firstname"
                            android:layout_marginLeft="@dimen/margin_level_1_italic"
                            android:textAppearance="@style/AppTheme.TextAppearance.Small.Light"
                            android:layout_marginTop="-7dp"
                            android:textColor="@null"
                            android:textStyle="italic" />
                    </RelativeLayout>

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_article_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/margin_level_1"
                    android:layout_toEndOf="@+id/iv_article_author_avatar"
                    android:layout_toRightOf="@+id/iv_article_author_avatar"
                    android:textAppearance="@style/AppTheme.TextAppearance.Title"
                    android:textColor="@null" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/margin_level_2"
                    android:layout_marginTop="@dimen/margin_level_2"
                    android:background="@color/divider" />

                <TextView
                    android:id="@+id/tv_article_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:linksClickable="true"
                    android:lineSpacingExtra="3dp"
                    android:textAppearance="@style/AppTheme.TextAppearance.Small.Light"
                    android:textColor="@null" />

            </LinearLayout>

    </ScrollView>

</FrameLayout>
