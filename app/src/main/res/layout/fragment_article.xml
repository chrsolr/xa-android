<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.keypunchers.xa.fragments.ArticleFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:padding="@dimen/padding_level_2"
        android:scrollbars="none">

            <LinearLayout
                android:id="@+id/ll_article"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <io.keypunchers.xa.views.CircularImageView
                        android:id="@+id/iv_article_author_avatar"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_centerVertical="false"/>

                    <TextView
                        android:id="@+id/tv_article_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="@dimen/margin_level_1"
                        android:layout_toEndOf="@+id/iv_article_author_avatar"
                        android:layout_toRightOf="@+id/iv_article_author_avatar"
                        android:textAppearance="@style/AppTheme.TextAppearance.Title"
                        android:textColor="@null" />

                    <TextView
                        android:id="@+id/tv_article_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_article_title"
                        android:layout_marginLeft="@dimen/margin_level_1"
                        android:layout_toEndOf="@+id/iv_article_author_avatar"
                        android:layout_toRightOf="@+id/iv_article_author_avatar"
                        android:textAppearance="@style/AppTheme.TextAppearance.Subtitle"
                        android:textColor="@null" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/margin_level_1"
                    android:layout_marginTop="@dimen/margin_level_1"
                    android:background="@color/divider" />

                <TextView
                    android:id="@+id/tv_article_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:linksClickable="true"
                    android:lineSpacingExtra="3dp"
                    android:textAppearance="@style/AppTheme.TextAppearance.Small"
                    android:textColor="@null" />

            </LinearLayout>

    </ScrollView>

</FrameLayout>