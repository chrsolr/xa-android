<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_level_0"
    android:paddingLeft="@dimen/padding_level_0"
    android:paddingRight="@dimen/padding_level_1"
    android:paddingTop="@dimen/padding_level_1">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/color_white"
        app:cardElevation="@dimen/recycler_view_evelation"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/padding_level_1">

        <io.keypunchers.xa.views.ScaledNetworkImageView
            android:id="@+id/iv_video_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_primary" />

    </android.support.v7.widget.CardView>
</RelativeLayout>