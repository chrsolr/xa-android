<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/padding_level_2">

    <io.keypunchers.xa.views.ScaledImageView
        android:id="@+id/iv_achievement_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:minHeight="200dp"
        android:background="@color/color_black" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/img_gradient_height"
        android:layout_alignBottom="@+id/iv_achievement_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/primary_gradient_bottom" />
	
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_achievement_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
		android:paddingLeft="8dp"
		android:paddingBottom="8dp"
        android:orientation="vertical">
		
	<TextView
		android:id="@+id/tv_achievement_title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:maxLines="2"
		android:textAppearance="@style/AppTheme.TextAppearance.Title"
		android:textColor="@color/color_white" />
	
	<TextView
		android:id="@+id/tv_achievement_desc"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:maxLines="2"
		android:textAppearance="@style/AppTheme.TextAppearance.Subtitle"
		android:textColor="@color/color_light_gray"
		android:textStyle="italic" />
	</LinearLayout>
	
</RelativeLayout>
