<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:paddingStart="@dimen/padding_level_2"
	android:paddingTop="@dimen/padding_level_2"
	android:paddingEnd="@dimen/padding_level_2"
    android:orientation="vertical">

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Change Signature"
		android:textAppearance="@style/AppTheme.TextStyle.Title"
		android:layout_marginBottom="@dimen/margin_level_2"
		android:textStyle="bold" />

	<android.support.design.widget.TextInputLayout
		android:id="@+id/til_signature"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_signature"
            android:layout_width="match_parent"
			android:inputType="textAutoComplete|textMultiLine|textCapSentences"
            android:layout_height="wrap_content"
            android:hint="Signature" />
	</android.support.design.widget.TextInputLayout>
</LinearLayout>
