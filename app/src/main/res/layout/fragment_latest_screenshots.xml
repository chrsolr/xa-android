<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="io.keypunchers.xa.app.LatestScreenshotsFragment">

    <ListView
        android:id="@+id/lv_latest_screenshot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:choiceMode="singleChoice"
        android:clipToPadding="false"
        android:divider="@null"
        android:dividerHeight="@dimen/padding_level_2"
        android:gravity="center"
        android:paddingBottom="@dimen/padding_level_2"
        android:paddingLeft="@dimen/padding_level_2"
        android:paddingRight="@dimen/padding_level_2"
        android:paddingTop="@dimen/padding_level_2"
        android:scrollbars="none" />


</LinearLayout>
